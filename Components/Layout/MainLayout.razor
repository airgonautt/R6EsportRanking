@inherits LayoutComponentBase

<div class="main-layout">
    <MudThemeProvider IsDarkMode=true />
    <!-- Header/Nav Bar -->
    <header class="navbar navbar-dark bg-dark">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="bootstrap/Visuals/r6.png" alt="Logo" class="logo">
                <span class="kanit-extrabold-italic navbar-brand mb-0 h1 ms-2">R6 Global Ranking</span>
            </div>
            <nav class="nav d-flex justify-content-around w-50">
                <a class="nav-link kanit-extrabold text-white" href="/">Home</a>
                <a class="nav-link kanit-extrabold text-white" href="/regions">Regions</a>
                <a class="nav-link kanit-extrabold text-white" href="/teams">Teams</a>
                <a class="nav-link kanit-extrabold text-white" href="/cards">Cards</a>
                <a class="nav-link kanit-extrabold text-white" href="/matches">Matches</a>
                <a class="nav-link kanit-extrabold text-white" href="/players">Players</a>
                <a class="nav-link kanit-extrabold text-white" href="/about">About</a>
            </nav>
            <button class="btn widget-button">
                <img src="bootstrap/Visuals/r6.png" alt="Widget Icon" class="logo">
            </button>
        </div>
    </header>

    <!-- Body -->
    <div class="body" style="padding-left: 4%; padding-right: 4%">
        @Body
    </div>

    <!-- Footer -->
    <footer class="footer bg-dark text-white text-center py-3">
        <div class="container">
            <p>&copy; @DateTime.Now.Year R6Ranking. All Rights Reserved.</p>
        </div>
    </footer>
</div>

