@inherits LayoutComponentBase

<div class="page">
    <!-- Header -->
    <header class="header d-flex align-items-center justify-content-between">
        <div class="logo">
            <img src="visuals/background.jpg" alt="R6 Esports Logo" class="logo-img" />
        </div>
        <button class="burger-menu" @onclick="ToggleSidebar">
            <span class="burger-icon"></span>
        </button>
    </header>

    <!-- Sidebar -->
    <div class="sidebar" style="display: @(isSidebarVisible ? "block" : "none")">
        <nav class="nav flex-column">
            <NavLink class="nav-link" href="/">
                <i class="bi bi-house"></i> Home
            </NavLink>
            <NavLink class="nav-link" href="/leaderboard">
                <i class="bi bi-trophy"></i> Leaderboard
            </NavLink>
            <div class="dropdown">
                <button class="dropdown-btn">
                    <i class="bi bi-grid"></i> More
                </button>
                <div class="dropdown-content">
                    <NavLink class="nav-link" href="/stats">
                        <i class="bi bi-bar-chart"></i> Stats
                    </NavLink>
                    <NavLink class="nav-link" href="/about">
                        <i class="bi bi-info-circle"></i> About
                    </NavLink>
                </div>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="content">
        @Body
    </main>

    <!-- Footer -->
    <footer class="footer text-center">
        <p>&copy; 2024 R6 Esports. All rights reserved.</p>
    </footer>
</div>



@code {
    private bool isSidebarVisible = false;

    private void ToggleSidebar()
    {
        isSidebarVisible = !isSidebarVisible;
    }
}

